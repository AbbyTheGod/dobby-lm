# Database
DATABASE_URL=postgresql://username:password@localhost:5432/notebooklm_lite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=notebooklm_lite
DB_USER=username
DB_PASSWORD=password

# Fireworks API
FIREWORKS_API_KEY=your_fireworks_api_key_here

# Web Scraping APIs (Required for URL content extraction)
# ScrapingBee is faster and has a better free tier (1,000 requests/month)
# Get free API key at: https://app.scrapingbee.com/
SCRAPINGBEE_API_KEY=your_scrapingbee_api_key_here
# ScraperAPI as fallback (1,000 requests/month)
# Get free API key at: https://scraperapi.com/
SCRAPERAPI_KEY=your_scraperapi_key_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
